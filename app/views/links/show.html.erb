
<div class="blog-post">
    <h2 class="blog-post-title"><%= link_to @link.title,@link %></h2>
    <p class="blog-post-meta">Submitted about <%= time_ago_in_words(@link.created_at) %> by <%= @link.user.email %></p>
</div>

<!--<%= image_tag @link.image.url(:medium) %> -->
<div class="btn-group">
 <%= link_to 'Visit URL', @link.url, class: "btn btn-primary"  %>
 <% if user_signed_in? %>
	 <% if current_user == @link.user || current_user.user_role == 1 %>
	 <%= link_to 'Edit', edit_link_path(@link), class: "btn btn-default"  %>
	 <%= link_to 'Destroy', @link, method: :delete, data:{ confirm: 'Are you sure?' }, class: "btn btn-default"  %>
	 <% end %>
 <% end %>

</div>
